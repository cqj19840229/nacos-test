<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wotrd.kafkatemplate.mapper.QuesttionMapper">

    <resultMap type="com.wotrd.kafkatemplate.domain.QuestionDO" id="OrderMap">
        <result property="id" column="id" jdbcType="BIGINT"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="DECIMAL"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="OrderMap">
        select
          id, name, price
        from nacos_test.order
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="OrderMap">
        select
          id, name, price
        from nacos_test.order
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultType="com.wotrd.kafkatemplate.domain.QuestionDO">
        SELECT questionnaire_id as infoId, research_person as userId, school_id as orgId
        FROM qn_research_person
        WHERE qn_research_person.status = 1
        AND update_date > '2020-02-21 10:00:00'
        AND '2020-02-21 11:10:00' > update_date
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into nacos_test.order(name, price)
        values (#{name}, #{price})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update nacos_test.order
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from nacos_test.order where id = #{id}
    </delete>

</mapper>